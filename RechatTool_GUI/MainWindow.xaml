<Window x:Class="RechatTool_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RechatTool_GUI"
        mc:Ignorable="d"
        Title="RechatTool_GUI" Height="150" Width="480">
	<Grid>
		<StackPanel Orientation="Vertical" Grid.ColumnSpan="2">
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Twitch VOD URL"/>
				<TextBox x:Name="vodURL" Width="280" Margin="5,0,0,0"/>
				<CheckBox x:Name="ovewriteVodID" Content="Overwrite" Margin="5,0,0,0"/>
			</StackPanel>
			<Grid Height="3"/>
			<!--<StackPanel Orientation="Horizontal">
				<TextBlock Text="FileName"/>
				<TextBox x:Name="FileName" Width="80"/>
				<CheckBox x:Name="ovewritefileName" Content="Overwrite"/>
				<CheckBox x:Name="showUserBadge" Content="Show user badges"/>
			</StackPanel>-->
			<Grid Height="50"/>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
				<Button Content="Download" Click="Button_Click" VerticalAlignment="Bottom"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
